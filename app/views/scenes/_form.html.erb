<%= form_for(@scene) do |f| %>
	<%= f.label "Date:" %>
	<%= f.text_field :date %><br />
	<%= f.label "Time:" %>
	<%= f.text_field :time %><br />
	<%= f.label "Location:" %>
	<%= f.text_field :location %><br /><br />
	<%= f.label "Enter scene story body here:" %><br />
	<%= f.text_area :story_body %><br />
	<%= f.submit %>
<% end %>